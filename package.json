{
  "name": "koalablog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm run db:init && wrangler types && astro dev",
    "dev:only": "wrangler types && astro dev",
    "build": "astro build",
    "build:local": "wrangler types && astro build",
    "preview": "wrangler types && astro preview",
    "preview:pages": "wrangler pages dev dist",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "migration:local": "pnpx wrangler d1 migrations apply DB --local",
    "migration:remote": "pnpx wrangler d1 migrations apply DB --remote",
    "migration:generate": "./node_modules/.bin/drizzle-kit generate --name=init",
    "db:clear": "pnpx wrangler d1 execute DB --file ./scripts/db/clear.sql --local",
    "db:clean": "rm -rf ./.wrangler/state",
    "db:info": "pnpx wrangler d1 execute DB --file ./scripts/db/info.sql --local",
    "db:init": "pnpm run db:clear && pnpm run migration:local",
    "kv:init": "bash ./scripts/kv/init.sh"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.0.1",
    "astro": "^5.0.4",
    "await-to-js": "^3.0.0",
    "better-auth": "^1.1.11",
    "consola": "^3.4.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.4",
    "drizzle-zod": "^0.6.1",
    "es-toolkit": "^1.29.0",
    "marked": "^15.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@cloudflare/vitest-pool-workers": "^0.6.0",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/marked": "^6.0.0",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.16.0",
    "eslint-plugin-astro": "^1.3.1",
    "unocss": "^0.65.1",
    "vitest": "^2.1.8"
  }
}
