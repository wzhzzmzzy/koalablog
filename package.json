{
  "name": "koalablog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev:d1": "pnpm run d1:init && wrangler types && astro dev",
    "dev:sqlite": "pnpm run sqlite:init && wrangler types && astro dev",
    "dev": "astro dev",
    "build": "astro build",
    "build:local": "wrangler types && astro build",
    "preview": "wrangler types && astro preview",
    "preview:pages": "wrangler pages dev dist",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "migration:d1:local": "pnpx wrangler d1 migrations apply DB --local",
    "migration:d1:remote": "pnpx wrangler d1 migrations apply DB --remote",
    "migration:sqlite": "./node_modules/.bin/drizzle-kit migrate && sqlite3 ./local.db < migrations/0001_prepare.sql",
    "migration:generate": "./node_modules/.bin/drizzle-kit generate --name=init",
    "migration:generate:auth": "pnpx @better-auth/cli@latest generate --output=drizzle --config=./src/lib/services/auth.ts",
    "d1:clear": "pnpx wrangler d1 execute DB --file ./scripts/db/clear.sql --local",
    "db:clean": "rm -rf ./.wrangler/state && rm ./local.db",
    "d1:info": "pnpx wrangler d1 execute DB --file ./scripts/db/info.sql --local",
    "d1:init": "pnpm run db:clean && pnpm run migration:d1:local",
    "sqlite:init": "pnpm run db:clean && pnpm run migration:sqlite",
    "kv:init": "bash ./scripts/kv/init.sh"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.0.1",
    "@astrojs/svelte": "^7.0.4",
    "@libsql/client": "^0.14.0",
    "astro": "^5.0.4",
    "await-to-js": "^3.0.0",
    "better-auth": "^1.1.11",
    "consola": "^3.4.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.4",
    "drizzle-zod": "^0.6.1",
    "es-toolkit": "^1.29.0",
    "marked": "^15.0.4",
    "svelte": "^5.19.2",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@cloudflare/vitest-pool-workers": "^0.6.0",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@iconify-json/tabler": "^1.2.15",
    "@types/marked": "^6.0.0",
    "@unocss/preset-icons": "^65.4.3",
    "@unocss/preset-rem-to-px": "^65.4.3",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.16.0",
    "eslint-plugin-astro": "^1.3.1",
    "unocss": "^65.4.3",
    "vitest": "^2.1.8",
    "wrangler": "^3.104.0"
  }
}
