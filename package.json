{
  "name": "koalablog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm run db:init && wrangler types && astro dev",
    "build": "wrangler types && astro build",
    "preview": "wrangler types && astro preview",
    "preview:pages": "wrangler pages dev dist",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migration:local": "pnpx wrangler d1 migrations apply DB --local --yes",
    "migration:remote": "pnpx wrangler d1 migrations apply DB --remote",
    "migration:generate": "pnpx prisma migrate diff --from-empty --to-schema-datamodel ./prisma/schema.prisma --script --output migrations/0001_create_markdown.sql",
    "db:clear": "pnpx wrangler d1 execute DB --file ./scripts/db/clear.sql --local",
    "db:info": "pnpx wrangler d1 execute DB --file ./scripts/db/info.sql --local",
    "db:init": "pnpm run db:clear && pnpm run migration:local"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.0.1",
    "@prisma/adapter-d1": "^6.2.1",
    "@prisma/client": "^6.2.1",
    "astro": "^5.0.4",
    "es-toolkit": "^1.29.0",
    "marked": "^15.0.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/marked": "^6.0.0",
    "eslint": "^9.16.0",
    "eslint-plugin-astro": "^1.3.1",
    "prisma": "^6.2.1",
    "unocss": "^0.65.1"
  }
}
