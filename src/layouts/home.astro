---
import Head from '@/components/head/index.astro'
import { MarkdownSource } from '@/db'
import { readPreset } from '@/db/markdown'
import { globalConfig } from '@/lib/kv'
import { marked } from 'marked'
import Layout from './layout.astro'

interface Props {
  title?: string
}

const { title: metaTitle } = Astro.props

const env = Astro.locals.runtime.env

const title = (await globalConfig(env.KOALA)).title
const presetSource = await readPreset(env, MarkdownSource.Nav)
const markup = marked(presetSource?.content ?? '')
---
<Layout>
  <Head title={metaTitle} slot="meta" />
  <header>
    <h1>{title}</h1>
    <nav>
      <Fragment set:html={markup} />
    </nav>
  </header>
  <main>
    <slot />
  </main>
  <footer>
    <slot name="footer" />
  </footer>
</Layout>
